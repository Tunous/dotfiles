# Source bashrc
if [ -n "$BASH_VERSION" ]; then
  if [ -f "$HOME/.bashrc" ]; then
    . "$HOME/.bashrc"
  fi
fi

# Add bin and dotfiles/bin in to path
[ -d "$HOME/bin" ]              && PATH="$HOME/bin:$PATH"
[ -d "$HOME/dotfiles/Scripts" ] && PATH="$HOME/dotfiles/Scripts:$PATH"

export PANEL_FIFO=/tmp/panel-fifo
