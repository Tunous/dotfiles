#!/bin/sh

# Xresources
[[ -f $DOTFILES/System/X/Xresources ]] && xrdb -merge $DOTFILES/System/X/Xresources
[[ -f $DOTFILES/System/X/Xcolors ]]    && xrdb -merge $DOTFILES/System/X/Xcolors

# Fonts
xset +fp /usr/share/fonts/local
xset fp rehash

# Disable beep
xset b off

# Disable screensaver
xset s noblank
xset s off
xset -dpms

# Key configurations
setxkbmap pl
[[ -f $DOTFILES/System/X/Xmodmap ]] && xmodmap $DOTFILES/System/X/Xmodmap
xcape

# Set wallpaper
sh ~/.fehbg &

# Mouse pointer
xsetroot -cursor_name left_ptr
unclutter -idle 2 &

compton &
devmon --exec-on-drive "notify-send 'Device connected' '%d'" --exec-on-remove "notify-send 'Device disconnected'" &

urxvtd &

sxhkd &
exec bspwm
