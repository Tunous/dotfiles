# Xresources
[[ -f $XDG_CONFIG_HOME/X/Xresources ]] && xrdb -merge $XDG_CONFIG_HOME/X/Xresources

# Fonts
xset +fp /usr/share/fonts/local
xset +fp ~/.fonts
xset fp rehash

# Key configurations
[[ -f $XDG_CONFIG_HOME/X/Xmodmap ]] && xmodmap $XDG_CONFIG_HOME/X/Xmodmap
xcape

# Random wallpaper form directory: https://www.dropbox.com/sh/o6k8wkzhj72eqgd/-CmK07wIhw
wallpaper.sh ~/Dropbox/Wallpapers

# Mouse pointer
xsetroot -cursor_name left_ptr
unclutter -idle 2 &

compton &

# BSPWM
sxhkd &
exec bspwm
