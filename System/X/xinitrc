#!/bin/sh
#
# xinitrc
#

# Set wallpaper
hsetroot -tile ~/Dropbox/Images/wallpaper.png

# Set bindings
sxhkd &

# Configure keys
setxkbmap pl
xmodmap $DOTFILES/System/X/Xmodmap
xcape

# Disable beep
xset b off

# Disable screensaver
xset s noblank
# xset s off
# xset -dpms

# Default cursor
xsetroot -cursor_name left_ptr
unclutter -idle 2 &

wm() {
    # Load X resources
    xrdb -load $DOTFILES/System/X/Xresources

    # Compositing
    compton &

    # Fonts
    xset +fp /usr/share/fonts/local
    xset fp rehash

    # Background apps
    urxvtd &
    dropboxd &

    exec $1
}

[[ -z $1 ]] && wm bspwm
wm $1
