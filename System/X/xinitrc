#!/bin/sh

# Xresources
[[ -f $DOTFILES/System/X/Xresources ]] && xrdb -merge $DOTFILES/System/X/Xresources

# Fonts
xset +fp /usr/share/fonts/local
xset fp rehash

# Disable beep
xset b off

# Disable screensaver
xset s noblank
xset s off

# Key configurations
[[ -f $DOTFILES/System/X/Xmodmap ]] && xmodmap $DOTFILES/System/X/Xmodmap
xcape

# Random wallpaper form directory: https://www.dropbox.com/sh/o6k8wkzhj72eqgd/-CmK07wIhw
wallpaper ~/Dropbox/Wallpapers

# Mouse pointer
xsetroot -cursor_name left_ptr
unclutter -idle 2 &

if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for f in /etc/X11/xinit/xinitrc.d/*; do
    [ -x "$f" ] && . "$f"
  done
  unset f
fi
compton &
devmon --exec-on-drive "dzen_notify 'Device connected' 'urxvt -e ranger /media'" --exec-on-remove "dzen_notify 'Device disconnected'" &

sxhkd &
exec bspwm
