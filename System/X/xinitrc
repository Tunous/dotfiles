# Xresources
xrdb -merge ~/.Xresources

# Fonts
xset +fp /usr/share/fonts/local
xset +fp ~/.fonts
xset fp rehash

# Key configurations
xmodmap ~/.Xmodmap
xcape

# Random wallpaper form directory: https://www.dropbox.com/sh/o6k8wkzhj72eqgd/-CmK07wIhw
wallpaper.sh ~/Dropbox/Wallpapers

# Mouse pointer
xsetroot -cursor_name left_ptr
unclutter -idle 2 &

compton &

# BSPWM
sxhkd &
exec bspwm
