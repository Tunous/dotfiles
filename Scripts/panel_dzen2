#! /bin/bash

# Variables {{{

NORMIFS=$IFS
FIELDIFS=':'

# }}}
# Functions {{{

Icon() { #{{{
  printf "^fg(#505050) ^i(%s) ^fg()" "$HOME/dotfiles/WM/icons/${1}.xbm"
} #}}}

Time() { #{{{
  printf "%s" "$(Icon clock) $(date +%H:%M:%S)"
} #}}}

Title() { #{{{
  printf " %s " "$(xtitle)"
} #}}}

Desks() { #{{{
  read -r -t .1 line

  case "$line" in
    W*)
      # bspwm internal state
      DESK="  "
      IFS=$FIELDIFS
      set -- ${line#?}

      while [ $# -gt 0 ] ; do
        item=$1
        name=${item#?}
        icon=" â€¢ "

        case $item in
          [OoFfUu]*)
            case $item in
              [OFU]*) # Focused desktop
                FG='#ffffff'
                BG='#262626'
                ;;

              o*) # Occupied desktop
                FG='#5e6c70'
                BG='#262626'
                ;;

              f*) # Free desktop
                FG='#000000'
                BG='#262626'
                ;;

              u*) # Urgent desktop
                FG='#000000'
                BG='#262626'
                ;;
            esac

            DESK="${DESK}^fg($FG)^bg($BG)^ca(1, bspc desktop -f ${name})^ca(2, bspc window -d ${name}) ${icon} ^ca()^ca()^fg()^bg()"
            ;;
        esac
        shift
      done
      IFS=$NORMIFS
      ;;
  esac

  printf "$DESK"
} #}}}

Volume() { #{{{
  vol=$(amixer get Master | egrep -o "[0-9]+%" | egrep -o "[0-9]*")
  mut=$(amixer get Master | egrep 'Playback.*?\[o' | egrep -o '\[o.+\]')

  if [ $vol -eq 0 ]; then
    ico="$(Icon volume0)"
  elif [ $vol -eq 100 ]; then
    ico="$(Icon volume100)"
  elif [ $vol -lt 100 ] && [ $vol -gt 60 ]; then
    ico="$(Icon volume75)"
  elif [ $vol -le 60 ] && [ $vol -gt 30 ]; then
    ico="$(Icon volume50)"
  elif [ $vol -le 30 ] && [ $vol -gt 0 ]; then
    ico="$(Icon volume25)"
  fi

  [ "$mut" = "[off]" ] && ico="$(Icon volume0)"

  printf "^ca(1,pkill volume.sh || volume.sh) $ico ^ca()"
} # }}}

Separate() { #{{{
  printf "     "
} # }}}

Align() { #{{{
  case $1 in
    left)   printf "^p(_LEFT)"    ;;
    center) printf "^p(_CENTER)"  ;;
    right)  printf "^p(_RIGHT)"   ;;
  esac

  [ -n $2 ] && printf "^p($2)"
} # }}}

# }}}

while :; do
  Align left
  Title

  Align center -130
  Desks

  Align right -140
  Volume

  Separate
  Time
  echo
done

