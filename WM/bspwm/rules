#! /bin/sh

ID="$1"
c="$(xwinfo -c "$ID")"
i="$(xwinfo -i "$ID")"

float()  { echo "floating=on"; }
floatC() { echo "floating=on center=on"; }

case "$c" in
  # Floating
  Gimp)         float  ;;
  Keepassx)     float  ;;
  Nautilus)     floatC ;;
  File-roller)  floatC ;;
  URxvt)        [ "$i" = "Floating" ] && floatC ;;

  # Frame
  BSPWM_FRAME)  echo "frame=on private=on" ;;

  # Firefox dialog windows
  Firefox)      [ "$i" != "Navigator" ] && floatC ;;
esac
