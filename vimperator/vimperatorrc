" Gui elements -----------------------------------------------------------
set gui=noaddons,nobookmarks,nomenu,nonavigation,tabs
set status=input,location,history,bookmark

" Big letters instead of numbers for hinttags
set hintchars=HJKLASDFGYUIOPQWERTNMZXCVB

" Updated change page patterns
set nextpattern=\\bnastępn,\\bdalej,\\bnext,^>$,^(>>|»)$,^(>|»),(>|»)$,\\bmore\\b
set previouspattern=\\bpoprzedni,\\bwstecz,\\bprev|previous\\b,^<$,^(<<|«)$,^(<|«),(<|«)$

" Better <Leader>
let mapleader = ','

" Open bookmarks
noremap B :bmarks<CR>

" Move between tabs
noremap J gt
noremap K gT

" Faster scrolling
noremap j <Down>
noremap k <Up>

" Stay in normal mode after loading page
set focuscontent

" Toggle stylesheet
nnoremap <Leader>s :styletoggle -name<Space>

noremap <C-l> :nohlsearch<CR>

" Source vimperatorrc file
noremap <silent> <Leader>v :source ~/_vimperatorrc<CR>

" Abbreviations
cabbrev ps panorama switch
cabbrev pu panorama push
cabbrev pl panorama pull

" Functions --------------------------------------------------------------
" Toggle css elements {{{2

" Code {{{3

javascript <<EOF

toggleElement = function (name) {
  document.getElementById(name).collapsed ^= 1;
}

EOF

"}}}
" Mappings {{{3

" Toggle navigation bar
map <silent> <F9> :js toggleElement('nav-bar')<CR>

"}}}

"}}}

" End {{{2

"source ~/test.vim
echo "vimperatorrc sourced"

