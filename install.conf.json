[
    {
        "clean": ["~", "~/.config"]
    },
    {
        "link": {
            "~/.tmux.conf": "tmux.conf",
            "~/.vim": "vim/",
            "~/.zshenv": "zsh/zshenv",
            "~/.gtkrc-2.0": "gtkrc-2.0",
            "~/.config/gtk-3.0": "gtk-3.0/",
            "~/.config/ranger": "ranger/",
            "~/.config/bspwm": "bspwm/",
            "~/.config/sxhkd": "sxhkd/",
            "~/.config/compton.conf": "compton.conf",
            "~/.pentadactylrc": "pentadactylrc",
            "~/.xinitrc": "xinitrc"
        }
    },
    {
        "shell": [
            ["git submodule update --init --recursive", "Installing submodules"]
        ]
    }
]
