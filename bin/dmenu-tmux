#!/bin/bash
#
# dmenu-tmux
# Use dmenu to select and start tmuxomatic project
#

projects=$(find ~/usr/tmux -type f -printf '%f\n' | sort)
choice=$(echo "$projects" | dmenu-get "Select project")

cd ~/usr/tmux

if [[ -z "$choice" ]]; then
    echo "No project selected."
    exit
fi

urxvtc -e tmuxomatic $choice
