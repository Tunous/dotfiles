" Undo files {{{

let s:undofilesDir = $VIM . '/undofiles'

if !isdirectory(s:undofilesDir)
  silent execute '!mkdir "' . s:undofilesDir . '" >nul 2>&1'
endif

execute 'set undodir=' . s:undofilesDir
set undofile

"}}}"
